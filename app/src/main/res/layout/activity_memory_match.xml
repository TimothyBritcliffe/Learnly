<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/root" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:padding="16dp">
    <!--  Controls row  -->
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center_vertical" android:orientation="horizontal">
        <TextView android:id="@+id/gridSizeText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Grid: 3Ã—3" android:paddingEnd="6dp"/>
        <SeekBar android:id="@+id/gridSeek" android:layout_width="100dp" android:layout_height="wrap_content"/>
        <TextView android:id="@+id/targetsText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="12dp" android:text="Targets: 4" android:paddingEnd="6dp"/>
        <SeekBar android:id="@+id/targetsSeek" android:layout_width="120dp" android:layout_height="wrap_content"/>
    </LinearLayout>
    <!--  Round duration  -->
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center_vertical" android:orientation="horizontal" android:layout_marginTop="6dp">
        <TextView android:id="@+id/roundText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Round: 12s" android:paddingEnd="6dp"/>
        <SeekBar android:id="@+id/roundSeek" android:layout_width="160dp" android:layout_height="wrap_content"/>
    </LinearLayout>
    <!--  Timer  -->
    <ProgressBar android:id="@+id/timerBar" style="?android:attr/progressBarStyleHorizontal" android:layout_width="match_parent" android:layout_height="8dp" android:layout_marginTop="8dp"/>
    <!--  Phase text  -->
    <TextView android:id="@+id/phaseText" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Tap START to play" android:textSize="16sp" android:layout_marginTop="8dp"/>
    <!--  Grid  -->
    <GridLayout android:id="@+id/grid" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:useDefaultMargins="false" android:columnCount="3" android:rowCount="3" android:layout_marginTop="8dp"/>
    <!--  Palette  -->
    <HorizontalScrollView android:layout_width="match_parent" android:layout_height="wrap_content" android:fillViewport="true" android:layout_marginTop="6dp">
        <LinearLayout android:id="@+id/paletteRow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal"/>
    </HorizontalScrollView>
    <!--  Start  -->
    <Button android:id="@+id/btnStart" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="START" android:layout_gravity="end" android:layout_marginTop="8dp"/>
</LinearLayout>